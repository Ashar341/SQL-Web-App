@page
@model SQL_web.Pages.Customers.IndexModel
@{
}


<br />
<!--Ingresando titulo y boton de action -->

<h2>List of Customers</h2>
<a class="btn btn-primary btn-sm" href="/Customers/Create">New Customer</a>

<!--Table header -->

<div>
    <p>Available Customers: </p>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>Prefix</th>
            <th>Building</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        <!--Table body, iterate for each item on the list and being sent by the
            code from the database
        -->
        @foreach(var item in Model.listCustomers)
        {
            <tr>
                <td>@item.PKCustomers</td>
                <td>@item.Customer</td>
                <td>@item.Prefix</td>
                <td>@item.Building</td>
                <td>
                    <a class="btn btn-primary btn-close" href="/Customers/Edit?id=">Edit</a>
                    <a class="btn btn-warning btn-close" href="/Customers/Delete?id=">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>